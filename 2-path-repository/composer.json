{
    "name": "pantheon-systems/upstream-prototype-wikimedia",
    "description": "CORE-1556: Prototype Composer-based upstream using Wikimedia merge plugin.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "path",
            "url": "upstream"
        }
    ],
    "require": {
        "php": ">=5.6",
        "pantheon-systems/upstream-configuration": "*",
        "composer/installers": "^1.2",
        "drupal/core-recommended": "^8.7",
        "drupal/core-composer-scaffold": "^8.8@dev",
        "drupal/legacy-scaffold-assets": "^8.7"
    },
    "require-dev": {
        "drupal/dev-dependencies": "^8.7"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "autoloader-suffix": "Drupal8"
    },
    "extra": {
        "_readme": [
            "This prototype Composer-based upstream demonstrates the use of",
            "a path repository to include the configuration and dependencies",
            "from the upstream, which is stored in upstream/composer.json. When",
            "the upstream makes changes to this file, our site will be updated",
            "via the usual 'git merge' upstream update mechanism. After the git",
            "upstream update, 'composer update' is used to update the",
            "dependencies in the composer.json file."
        ],
        "composer-scaffold": {
            "allowed-packages": [
                "drupal/legacy-scaffold-assets",
                "drupal/core"
            ],
            "locations": {
                "web-root": "web/"
            }
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "web/drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        }
    }
}
